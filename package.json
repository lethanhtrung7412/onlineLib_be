{
  "name": "onlineLib_be",
  "version": "1.0.0",
  "description": "Backend for onlineLibrary",
  "main": "index.js",
  "repository": "https://github.com/lethanhtrung7412/onlineLib_be",
  "author": "lethanhtrung7412",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "yarn build && node dist/index.js",
    "db:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/database/data-source.ts --pretty",
    "db:migrate": "typeorm-ts-node-commonjs migration:run -d ./src/database/data-source.ts",
    "db:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/database/data-source.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jwt": "^0.2.0",
    "nodemon": "^2.0.22",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2"
  }
}
